<%= form_with(model: todo, local: true) do |form| %>
  <div class="p-4">
    <div class="mb-2">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <div class="mb-2">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, class: "form-input rounded-md shadow-sm mt-1 block w-full", rows: 2 %>
    </div>
    <div class="mb-2">
      <%= form.label :time, class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_local_field :time, class: "form-input rounded-md shadow-sm mt-1 block w-full" %>
    </div>

    <%= form.submit "Add Todo", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  </div>
<% end %>
